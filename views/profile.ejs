<div class="sidebar">
    <button id="myBtn" class="dropbtn">
        <%if(!user.dp) {%>
        <img src="https://t4.ftcdn.net/jpg/04/83/90/95/360_F_483909569_OI4LKNeFgHwvvVju60fejLd9gj43dIcd.jpg" class="icon">
        <%}else{ %>
        <img src="<%=user.dp%>" class="icon">
        <% } %>
    </button>
    <p class="hide"><%= user.name %></p>
    <a href="/api/profile/<%= user.name %>">Profile</a>
    <a class="active" href="/home/<%= user.name %>">Home</a>
    <a href="/api/friends/<%= user.name %>">Friends</a>
    <a href="/api/post/<%= user.name %>">Posts</a>
    <a href="/api/chat">Chat</a>
    <a href="/">Logout</a>
</div>

<div id="profilepage">
    <div class="containerr">
        <form id="editProfileForm" action="/api/profile/<%= user.name %>" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= user.email %>">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter new password">
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="address" name="address" value="<%= user.addr %>">
            </div>
            <div class="form-group">
                <label for="phone">Phone</label>
                <input type="text" id="phone" name="phone" value="<%= user.phone %>">
            </div>
            <div class="form-group">
                <label for="phone">Gender</label>
                <input type="text" id="gender" name="gender" value="<%= user.gender %>">
            </div>
            <div class="form-group">
                <label for="about">About Yourself</label>
                <textarea id="about" name="about" value="<%= user.about %>"></textarea>
            </div>
            <div class="form-group">
            <label for="profileImage">Profile Image:</label>
            <input type="file" id="profileImage" name="profileImage" accept="image/*">
            </div>
            <button type="submit" class="btn">Save Profile</button>
        </form>
    </div>
    <div id="dp">
        <img id="imgs" src="<%= user.dp %>" alt="User Image">
    </div>
</div>



<!-- Bootstrap Modal -->
<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true" style="margin:10px ;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="padding:5px ;">
                <h5 class="modal-title" id="successModalLabel">Profile Updated</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <p>Profile successfully updated.</p>
            </div>
            <!-- <div class="modal-body" style="padding:10px ;">
                <p>Profile successfully updated.</p>
            </div> -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JavaScript and jQuery -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

